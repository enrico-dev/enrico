      integer ldim,lx1,ly1,lz1,lelt,lelv,lxd,lyd,lzd,lelx,lely,lelz
      parameter (ldim=3)
      parameter (lx1=6,ly1=lx1,lz1=lx1,lelt=2600,lelv=lelt)
      parameter (lxd=10,lyd=lxd,lzd=lxd)
      parameter (lelx=1,lely=1,lelz=1)
 

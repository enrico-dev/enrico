      parameter (ly2=ly1)
      parameter (lz2=lz1)
      parameter (lx3=lx1)
      parameter (ly3=ly1)
      parameter (lz3=lz1)

      integer lp,lelg
      parameter (lp = 2)
      parameter (lelg = 5000)
c

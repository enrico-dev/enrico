c-----------------------------------------------------------------------
C
C  USER SPECIFIED ROUTINES:
C
C     - boundary conditions
C     - initial conditions
C     - variable properties
C     - local acceleration for fluid (a)
C     - forcing function for passive scalar (q)
C     - general purpose routine for checking errors etc.
c-----------------------------------------------------------------------
      subroutine uservp (ix,iy,iz,eg)
      include 'SIZE'
      include 'TOTAL'
      include 'NEKUSE'

      integer e,f,eg

      udiff  = 0.01
      utrans = 1.0

      e  = gllel(eg)
      xx = xm1(ix,iy,iz,e)
      zz = zm1(ix,iy,iz,e)
      rr = sqrt(xx**2+zz**2)

      if (ifield.eq.2) then
      if (rr.lt.0.475) then
          udiff  = 0.13  ! clad conductivity in W/cm-K
          utrans = 1.0   ! clad rho-cp
      else if (rr.lt.0.414) then
          udiff  = 0.0001  ! gap conductivity in W/cm-K
          utrans = 0.1     ! gap rho-cp
      else if (rr.lt.0.406) then
          udiff  = 0.045  ! fuel conductivity in W/cm-K
          utrans = 1.0    ! fuel rho-cp
      endif
      endif

      return
      end
